---
const { to, gradientFrom, gradientTo, title } = Astro.props;
---

<a href={to} class="card" data-gradientfrom={gradientFrom}>
  <div class="card__inner">
    <h2 class="card__title">{title}</h2>
    <div class="card__footer">&rarr;</div>
  </div>
</a>

