---
const { data } = Astro.props;
import Card from "./Card.astro";
---

<div class="cards">
  {data.map((json) => <Card {...json} />)}
</div>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Since this is standard CSS, we can have media queries here */
  @media screen and (min-width: 768px) {
    .cards {
      flex-direction: row;
    }
  }
</style>
