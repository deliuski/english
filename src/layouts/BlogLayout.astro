---
import MainLayout from "./MainLayout.astro";
const { title, subtitle, image } = Astro.props.frontmatter;
---

<MainLayout title={title}>
  <figure class="figure"></figure>
  <h1>{title}</h1>

  <slot />
</MainLayout>

<style>
  h1 + h2 {
    margin-bottom: 1rem;
  }

  .figure {
    margin: 0;
  }

  .figure__image {
    max-width: 100%;
    border-radius: 10px;
  }

  .figure__caption {
    font-size: 0.9rem;
  }
</style>
